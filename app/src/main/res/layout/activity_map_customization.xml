<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapCustomizationActivity"
    android:background="@drawable/thumb_901069">

    <ImageView
        android:id="@+id/map_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/default_map" />

    <TextView
        android:id="@+id/title_map"
        android:layout_width="268dp"
        android:layout_height="66dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="558dp"
        android:layout_marginEnd="78dp"
        android:text="SELECT MAP TYPE"
        android:textSize="30dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_defaultMap"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="47dp"
        android:layout_marginTop="625dp"
        android:text="Default"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_sateliteMap"
        android:layout_width="126dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="623dp"
        android:layout_marginEnd="47dp"
        android:layout_toEndOf="@+id/btn_defaultMap"
        android:backgroundTint="#B8AEAE"
        android:text="Satelite"
        android:textColor="@color/black"
        android:textStyle="bold" />
</RelativeLayout>